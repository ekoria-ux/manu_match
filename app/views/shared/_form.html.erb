<div class="form-group">
  <%= form.label :title, class: "form-label" %>
  <%= form.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :body, class: "form-label" %>
  <%= form.text_area :body, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :date_hired_from, class: "form-label" %>
  <%= form.date_select :date_hired_from, start_year: Time.current.year, end_year:Time.current.year + 1, use_month_number: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :date_hired_to, class: "form-label" %>
  <%= form.date_select :date_hired_to, start_year: Time.current.year, end_year:Time.current.year + 1, use_month_number: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :area, for: "select_area", class: "form-label" %>
  <%= form.select :area, OPTION_AREA, {}, { id: "select_area", class: "form-control" } %>
</div>

<div class="form-group">
  <%= form.label :category, for: "select_category", class: "form-label" %>
  <%= form.select :category, OPTION_CATEGORY, {}, { id: "select_category", class: "form-control" } %>
</div>

<div class="form-group">
  <%= form.label :e_count, class: "form-label" %>
  <%= form.number_field :e_count, min:1,max:100, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :skill, class: "form-label" %>
  <%= form.text_area :skill, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :remark, class: "form-label" %>
  <%= form.text_area :remark, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :expired_at, class: "form-label" %>
  <%= form.datetime_select :expired_at, start_year: Time.current.year, end_year:Time.current.year + 1, use_month_number: true, class: "form-control" %>
</div>
 
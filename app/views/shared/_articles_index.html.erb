<div class="row outer-box">
  <div class="col-md">
    <h4 class="title">記事一覧</h4>
    <% if articles.present? %>
      <div class="card-deck">
        <% articles.each do |article| %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h6 class="card-title"><%= truncate(article.title, length: 8) %></h6>
                <p class="card-text"><%= article.category %></p>
                <% if controller.kind_of?(AccountsController) %>
                  <p class="card-text"><%= Article.status_text(article.status) %></p>
                  <div class="center mt-md-4 mt-2">
                    <%= link_to "記事を編集", edit_article_path(article), class: "btn btn-card-orange" %>
                    <%= link_to "記事を削除", article_path(article.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-card-red mt-md-2 mt-0" %>
                  </div>
                <% elsif controller.kind_of?(StaticPagesController)%>
                  <p class="card-text"><%= article.author.company_name %></p>
                  <div class="center mt-md-4 mt-2"><%= link_to "詳細を見る", article, class: "btn btn-card" %></div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <% if pagy.vars[:count] > 9 %>
          <span class="pagination pagination-sm justify-content-center p-bottom">
            <%== pagy_bootstrap_nav(pagy) %>
          </span>
        <% end %>
      </div>
    <% else %>
      <div>
        <p>記事がありません</p>
      </div>
    <% end %>
  </div>
</div>
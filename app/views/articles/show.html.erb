<% @page_title = @article.title %>
<h1><%= @page_title %></h1>

<% if current_member %>
  <div class="toolbar"><%= link_to "編集",
  [:edit, @article] %></div>
<% end %>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @article.title %></td>
  </tr>
  <tr>
    <th>本文</th>
    <td><%= simple_format(@article.body) %></td>
  </tr>
  <tr>
    <th>期間</th>
    <td><%= @article.date_hired_from %>〜<%= @article.date_hired_to %></td>
  </tr>
  <tr>
    <th>地域</th>
    <td><%= @article.area %></td>
  </tr>
  <tr>
    <th>業種</th>
    <td><%= @article.category %></td>
  </tr>
  <tr>
    <th>必要スキル</th>
    <td><%= simple_format(@article.skill) %></td>
  </tr>
  <tr>
    <th>備考</th>
    <td><%= simple_format(@article.remark) %></td>
  </tr> 
</table>



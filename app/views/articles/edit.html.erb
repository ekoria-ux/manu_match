<% provide(:title, "記事の編集") %>

<%= render "shared/error_messages", object: @article %>
<div class="row justify-content-end"><%= link_to "記事の詳細に戻る", @article %></div>

<div class="row justify-content-center">
  <div class="col-md-8 col-md-offset-2">
    <h4><%= yield(:title) %></h4>
    <%= form_for @article do |form| %>
      <%= render "shared/article_form", form: form %>
      <div><%= form.submit "編集", class: 'btn btn-success' %></div>
    <% end %>
  </div>
</div>
<% provide(:title, "記事の編集") %>

<div class="toolbar row justify-content-end"><%= link_to "記事の詳細に戻る", @article %></div>
<%= render "shared/error_messages", object: @article %>

<div class="row justify-content-center">
  <div class="col-md-8 col-md-offset-2">
    <h4>記事の編集</h4>
    <%= form_for @article do |form| %>
      <%= render "shared/form", form: form %>
      <div><%= form.submit "編集", class: 'btn btn-success' %></div>
    <% end %>
  </div>
</div>
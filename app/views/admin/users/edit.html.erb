<% provide(:title, "ユーザー情報変更") %>

<%= render "shared/error_messages", object: @user %>
<div class="row justify-content-end"><%= link_to "ユーザーページに戻る", [:admin, @user] %></div>

<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <h4><%= yield(:title) %></h4>
    <%= form_with(model: [:admin, @user], local: true) do |form| %>
      <%= render "shared/user_form", form: form, user: @user %>
      <div><%= form.submit "変更", class: "btn btn-orange" %></div>
    <% end %>
  </div>
</div>

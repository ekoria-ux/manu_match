<% provide(:title, "アカウント情報変更") %>

<%= render "shared/error_messages", object: @user %>

<div class="row justify-content-center outer-box">
  <div class="col-md-9 col-md-offset-3">
    <h4 class="title"><%= yield(:title) %></h4>
    <%= form_with(model: @user, scope: "account", url: :account, local: true) do |form| %>
      <%= render "shared/user_form", form: form, user: @user %>
      <div class="center">
        <%= link_to "戻る", :account, class: "btn mr-md-4 mr-2" %>
        <%= form.submit "変更", class: "btn btn-success" %>
      </div>
    <% end %>
    <p class="center mt-md-4 mt-2"><%= link_to "パスワード変更", :edit_password %></p>
  </div>
</div>

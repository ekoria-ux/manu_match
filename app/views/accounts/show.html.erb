<% provide(:title, "マイアカウント") %>

<div class="row align-items-center justify-content-center">
  <div class="col-md-4">
    <h4><%= "#{ @user.name }さんのページ" %></h4>
  </div>
  <div class="col-md-4">
    <% if @user == current_user %>
      <div class="profile-btn">
        <%= link_to "アカウント情報編集", :edit_account, class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "users/user_body", user: @user %>
<%= render "shared/articles_index", articles: @articles %>

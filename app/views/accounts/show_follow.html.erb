<% provide(:title, @title) %>
<div class="row justify-content-center">
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <div class="row justify-content-end"><%= link_to "マイページに戻る", account_path %></div>
    <% if @users.any? %>
      <ul>
        <%= render @users %>
      </ul>
      <span class="pagination pagination-sm justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </span>
    <% else %>
      <p><%= "まだ#{yield(:title)}のユーザーはいません" %></p>
    <% end %>
  </div>
</div>
<% provide(:title, "パスワード変更") %>

<%= render "shared/error_messages", object: @user %>
<div class="row justify-content-end"><%= link_to "アカウント情報編集に戻る", :edit_account %></div>

<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <h4><%= yield(:title) %></h4>
    <%= form_for @user, as: "account", url: :password do |form| %>
      <div class="form-group">
        <%= form.label :current_password, class: "form-label" %>
        <%= form.password_field :current_password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "新しいパスワード", class: "form-label" %>
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "新しいパスワード(確認用)", class: "form-label" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div><%= form.submit "変更", class: "btn btn-success" %></div>
    <% end %>
  </div>
</div>

